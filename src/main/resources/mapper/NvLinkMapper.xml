<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.team.mapper.NvLinkMapper">
	<insert id="create">
		insert into novel_link ( nvl_parents,
		nvl_childnode,mem_id)
		values
		(#{nvl_parents},#{nvl_childnode},#{mem_id})
	</insert>

	<select id="findByParetID" resultType="io.team.domain.NovelLink">
		SELECT * FROM novel_link
		where
		nvl_parents =
		#{nvl_parents};
	</select>

</mapper>
